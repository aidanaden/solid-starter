{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:solid/typescript", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-empty-function": "error",
    "no-implicit-coercion": "error",
    "no-var": "error",
    "template-curly-spacing": ["error", "never"],
    "prefer-spread": "warn",
    "prefer-const": "error"
  }
}